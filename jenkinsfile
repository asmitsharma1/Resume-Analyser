pipeline {
    agent any

    stages {

        stage('Clone Repo') {
            steps {
                git 'https://github.com/asmitsharma1/Resume-Analyser.git'
            }
        }

        stage('Build Backend') {
            steps {
                sh '''
                cd backend
                python3 -m venv venv
                source venv/bin/activate
                pip install -r requirements.txt
                '''
            }
        }

stage('Docker Build') {
    steps {
        sh '''
        cd backend
        docker build -t resume-backend .
        '''
    }
}
        stage('Deploy') {
            steps {
                sh '''
                docker stop resume-backend || true
                docker rm resume-backend || true
                docker run -d -p 8000:8000 --name resume-backend resume-backend
                '''
            }
        }
    }
}
